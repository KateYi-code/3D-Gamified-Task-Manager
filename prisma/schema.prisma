// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// user table
model User {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions  Session[]
  targets   Target[]
  tasks     Task[]
  following Follow[]     @relation("Follow-User")
  followers Follow[]     @relation("Follow-Followed")
  posts     Post[]
  likes     PostLike[]
  credits   UserCredit[]
  planets   Planet[]

  PlanetObject PlanetObject[]
}

enum UserCreditReason {
  TASK_COMPLETED
  PLANET_BUILD
}

model UserCredit {
  id        String           @id @default(cuid()) @map("_id")
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  userId    String
  reason    UserCreditReason
  credit    Int              @default(0) // negative means comsumption, positive means earning

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// userid -> followedId
model Follow {
  id         String   @id @default(cuid()) @map("_id")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String
  followedId String

  followed User @relation("Follow-Followed", fields: [followedId], references: [id], onDelete: Cascade)
  user     User @relation("Follow-User", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, followedId])
}

model Post {
  id        String   @id @default(cuid()) @map("_id")
  text      String
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  taskId    String?

  task  Task?      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes PostLike[]
}

model PostLike {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  postId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Target {
  id        String   @id @default(cuid()) @map("_id")
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks  Task[]
  planet Planet?

  @@unique([userId, title])
}

model Planet {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  data      Json
  targetId  String

  target Target @relation(fields: [targetId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([targetId])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum RepeatRule {
  daily
  weekly
  monthly
}

model Task {
  id           String     @id @default(cuid()) @map("_id")
  title        String
  description  String     @default("")
  status       TaskStatus @default(PENDING)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  completedAt  DateTime?
  targetId     String
  userId       String
  date         DateTime   @default(now())
  taskDuration Int        @default(20)

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  target       Target         @relation(fields: [targetId], references: [id], onDelete: Cascade)
  posts        Post[]
  PlanetObject PlanetObject[]
}

model PlanetObject {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  modelPath String
  position  Json
  rotation  Json
  scale     Json
  taskId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([taskId])
}
